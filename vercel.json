{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build"
      }
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "github": {
    "enabled": true,
    "silent": false
  },
  "env": {
    "VITE_DEBUG_MODE": "true",
    "VITE_SERVER_URL": "https://wrong-myrtice-redmanwords-rw-5ae3b9dd.koyeb.app"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=0"
        }
      ]
    }
  ],
  "trailingSlash": false,
  "cleanUrls": true,
  "public": false
} 
